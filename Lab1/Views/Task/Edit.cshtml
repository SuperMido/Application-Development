@model Lab1.Models.Task
@{
    ViewBag.Title = "Edit";
}

<br />
<h2 class="text-info">Edit Category</h2>
<br />

<form method="post" asp-action="Edit">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-3">
                <label class="col-form-label">@Html.EditorFor(m => m.Title) </label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="col-6">
                    <input type="submit" class="btn btn-info form-control" value="Edit" />
                </div>
            </div>
        </div>
    </div>
</form>